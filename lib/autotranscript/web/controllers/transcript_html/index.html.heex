<div class="container">
  <h1>Transcript Files</h1>
  <p class="subtitle">All .txt files in the watch directory</p>
  
  <div class="table-container">
    <table class="transcript-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Created At</th>
          <th>Lines</th>
        </tr>
      </thead>
      <tbody>
        <%= for file <- @txt_files do %>
          <tr>
            <td class="filename"><%= file.name %></td>
            <td class="date"><%= format_datetime(file.created_at) %></td>
            <td class="lines"><%= file.line_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <%= if Enum.empty?(@txt_files) do %>
      <div class="empty-state">
        <p>No transcript files found in the watch directory.</p>
      </div>
    <% end %>
  </div>
  
  <div class="stats">
    <p>Total files: <%= length(@txt_files) %></p>
  </div>
</div>

<style>
